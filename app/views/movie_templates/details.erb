<!-- Getting the details for each movie -->

<h1>Movie #<%= @the_movie.id %> details</h1>

<a href="/movies">Go back</a>

<hr>

<dl> <!--HTML Description List-->
  <dt>Title</dt> <!--HTML Description Title-->
  <dd><%= @the_movie.title %></dd> <!--HTML Description Data-->

  <dt>Year</dt>
  <dd><%= @the_movie.year %></dd>

  <dt>Duration</dt>
  <dd><%= @the_movie.duration %></dd>

  <dt>Description</dt>
  <dd><%= @the_movie.description %></dd>

  <dt>Image</dt>
  <dd><img src="<%= @the_movie.image %>" width="300"></dd>

  <dt>Director</dt>
  <dd>
    <%= @matching_director.name %>
  </dd>

  <dt>Created at</dt>
  <dd><%= @the_movie.created_at%></dd>

  <dt>Updated at</dt>
  <dd><%= @the_movie.updated_at%></dd>

</dl>
